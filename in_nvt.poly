##### First run to push monomers/chains off each other #######
units		lj
atom_style	full

read_data	input.lammps


pair_style      soft 1.12246
pair_coeff      * * 0.0
variable        prefactor equal 60.0*elapsed/50000


fix            softpushoff all adapt 1 pair soft a * * v_prefactor

bond_style	fene
bond_coeff	1 30.0 1.5 1.0 1.0
special_bonds	fene

improper_style none


neighbor	1.0 bin
neigh_modify	every 1 delay 0 check yes


fix   		fix1 all nvt temp 1.0 1.0 1.0


timestep	0.005


thermo		10000
thermo_style 	custom step temp press ke pe ebond eimp evdwl ecoul elong lx ly lz


dump		dump1 all custom 20000 pushoff.dump id mol type xs ys zs ix iy iz


run		50000

unfix		softpushoff

undump		dump1

#################Equilibration##################

pair_style 	lj/cut 2.5 
pair_modify	shift yes  
pair_coeff 	* * 1.0 1.0


reset_timestep 0

variable f file python.txt
variable s equal next(f)
dump dump2 all custom 1000 equilnvt.dump id mol type xs ys zs ix iy iz
dump_modify dump2 every v_s
dump_modify dump2 append yes
restart 1048576 imers.restart

run	50331648